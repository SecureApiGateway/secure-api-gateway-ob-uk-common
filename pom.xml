<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.forgerock.securebanking.uk</groupId>
    <artifactId>securebanking-openbanking-uk</artifactId>
    <packaging>pom</packaging>
    <version>1.1.6-SNAPSHOT</version>
    <name>Secure Banking access Toolkit library for Open Banking UK specs</name>
    <url>https://github.com/SecureBankingAccessToolkit/securebanking-openbanking-uk</url>

    <parent>
        <groupId>com.forgerock.securebanking</groupId>
        <artifactId>securebanking-parent</artifactId>
        <version>1.0.5-SNAPSHOT</version>
        <relativePath />
    </parent>

    <properties>
        <!-- https://maven.apache.org/plugins/maven-compiler-plugin/examples/set-compiler-release.html -->
        <!-- Overwrites the release property (jdk 9+) for maven-compiler-plugin defined in the securebanking-parent -->
        <java.version>11</java.version>
    </properties>

    <scm>
        <connection>scm:git:git@github.com:SecureBankingAccessToolkit/securebanking-openbanking-uk.git
        </connection>
        <developerConnection>scm:git:git@github.com:SecureBankingAccessToolkit/securebanking-openbanking-uk.git
        </developerConnection>
        <url>https://github.com/SecureBankingAccessToolkit/securebanking-openbanking-uk.git</url>
        <tag>HEAD</tag>
    </scm>

    <modules>
        <module>securebanking-openbanking-uk-bom</module>
        <module>securebanking-openbanking-uk-common</module>
        <module>securebanking-openbanking-uk-obie-datamodel</module>
        <module>securebanking-openbanking-uk-forgerock-datamodel</module>
        <module>securebanking-openbanking-uk-error</module>
    </modules>

    <distributionManagement>
        <repository>
            <id>maven.forgerock.org-community</id>
            <name>maven.forgerock.org-releases</name>
            <url>https://maven.forgerock.org/artifactory/community</url>
        </repository>
        <snapshotRepository>
            <id>maven.forgerock.org-community-snapshots</id>
            <name>maven.forgerock.org-snapshots</name>
            <url>https://maven.forgerock.org/artifactory/community</url>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>maven.forgerock.org-community</id>
            <name>maven.forgerock.org-releases</name>
            <url>https://maven.forgerock.org/artifactory/community</url>
        </repository>
        <repository>
            <id>maven.forgerock.org-community-snapshots</id>
            <name>maven.forgerock.org-snapshots</name>
            <url>https://maven.forgerock.org/artifactory/community</url>
        </repository>
        <repository>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo1.maven.org/maven2</url>
            <layout>default</layout>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

</project>
